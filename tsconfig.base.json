{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "importHelpers": false,
    "declaration": true,
    "isolatedDeclarations": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "ES6",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@arcstack/*": [
        "packages/*/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}